@model IEnumerable<EmployeeRegistration.Models.EmployeeTable>

@{
    ViewBag.Title = "Index";
}

<br />
<br />

<h2>Employee List</h2>


<hr />


@using (Html.BeginForm("Index", "Employees", FormMethod.Get))
{
    <p>
        Filter Employee by Name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<br />
<h4>
    <p>
        @Html.ActionLink("Create New Employee", "Create")
    </p>
</h4>

<hr/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RFC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpStatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RFC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpStatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>


<div>
    @Html.ActionLink("Employee List", "Index")
</div>
